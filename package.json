{
  "name": "@vritti/api-sdk",
  "type": "module",
  "version": "0.1.4",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./drizzle-orm": {
      "import": {
        "types": "./dist/drizzle-orm.d.ts",
        "default": "./dist/drizzle-orm.js"
      },
      "require": {
        "types": "./dist/drizzle-orm.d.cts",
        "default": "./dist/drizzle-orm.cjs"
      }
    },
    "./drizzle-pg-core": {
      "import": {
        "types": "./dist/drizzle-pg-core.d.ts",
        "default": "./dist/drizzle-pg-core.js"
      },
      "require": {
        "types": "./dist/drizzle-pg-core.d.cts",
        "default": "./dist/drizzle-pg-core.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vritti-hub/api-sdk.git"
  },
  "author": "Shashank Raju <shashank@vrittiai.com>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "tsx --test 'src/**/*.test.ts'",
    "test:watch": "tsx --test --watch 'src/**/*.test.ts'",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run type-check && npm run test && npm run build"
  },
  "dependencies": {
    "drizzle-orm": "^1.0.0-beta.3-36e9b9e",
    "pg": "^8.16.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^10.0.0",
    "fastify": "5.6.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^10.2.0",
    "@swc/core": "^1.13.5",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^24.9.2",
    "@types/pg": "^8.16.0",
    "fastify": "5.6.2",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
